<mvc:View
  controllerName="sap.ui.demo.walkthrough.controller.Invoice"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">
 
   <Table
        id="invoiceList"
        class="saUiResponsiveMargin"
        width="auto"
        items="{
            path: 'invoice>/Invoices',
            sorter: {
                path: 'ShipperName',
                group: true
                }
            }">
        <columns>
            <Column
                hAlign="Center"
                minScreenWidth="Small"
                demandPopin="true"
                width="5em">
                <Text text="{i18n>columnQuantity}"/>
            </Column>   
            <Column hAlign="Center">
                <Text text="{i18n>columName}"/>
            </Column>
            <Column 
                hAlign="Center"
                minScreenWidth="small"
                demandPopin="true">
                <Text text="{i18n>columnStatus}"/>
            </Column>
            <Column 
                hAlign="Center"
                minScreenWidth="Tablet"
                demandPopin="false">
                <Text text="{i18n>columnSupplier}"/>
            </Column>
            <Column hAlign="Center">
                <Text text="{i18n>columnPrice}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem
                type="Navigation"
                press=".onPress">
                <cells>
                    <ObjectNumber number="{invoice>Quantity}" emphasized="false"/>
                    <ObjectIdentifier title="{invoice>ProductName}"/>
                    <Text text="{
                            path: 'invoice>Status',
                            formatter: '.formatter.statusText'    
                        }"/>
                    <Text text="{invoice>ShipperName}"/>
                    <ObjectNumber   
                      number="{
                    parts: [{path: 'invoice>ExtendedPrice'}, {path: 'view>/currency'}],
                    type: 'sap.ui.model.type.Currency',
                    formatOptions: {
                        showMeasure: false,
                        preserveDecimals: false
                    }}"
                      unit="{view>/currency}" 
                      state="{= ${invoice>ExtendedPrice} > 50 ? 'Warning' : 'Information'}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>