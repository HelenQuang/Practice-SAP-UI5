<mvc:View 
   controllerName="sap.ui.demo.walkthrough.controller.HelloPanel"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">
  <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
    <content>
      <Button text="{i18n>showClickMeButtonText}" press=".onClick" class="customBtn"/>
      <Input value="{/recipient/name}" description="Moika {/recipient/name}!" valueLiveUpdate="true" width="60%"/>
      <FormattedText htmlText="Moi {/recipient/name}!" class="sapUiSmallMargin sapThemeHighlight-asColor customText" />
    </content>
  </Panel>
</mvc:View>